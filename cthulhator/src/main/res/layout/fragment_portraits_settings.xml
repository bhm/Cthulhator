<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:background="@color/deep_orange_50">

    <ImageButton
        android:id="@id/action_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/flatt_button_selector"
        android:padding="@dimen/padding_16"
        android:src="@drawable/settings_unfold_selector"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_16"
        android:padding="@dimen/padding_16"
        android:textColor="@color/male_female"
        android:textOff="@string/female"
        android:textOn="@string/male"/>

    <RelativeLayout
        android:id="@android:id/custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_below="@id/action_settings">

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_16"
            android:padding="@dimen/padding_16"
            android:textColor="@color/male_female"
            android:textOff="@string/female"
            android:textOn="@string/male"/>
    </RelativeLayout>

</RelativeLayout>