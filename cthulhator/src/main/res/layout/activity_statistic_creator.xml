<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:id="@id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/twice_actionbar_height"
        android:background="@color/main_background">

        <TextView
            android:id="@id/points_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="@dimen/padding_16"
            android:paddingLeft="@dimen/padding_48"
            android:paddingRight="@dimen/padding_16"
            android:paddingTop="@dimen/padding_16"
            android:text="@string/points_available"
            android:textAllCaps="true"
            android:textColor="@color/grey_white_1000"
            android:textSize="@dimen/font_20"
            android:textStyle="bold"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@android:id/custom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fab_offset"
        android:layout_below="@id/header"
        android:background="@color/transparent">

    </FrameLayout>

    <ScrollView
        android:id="@id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@android:id/custom">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_20">

            <RelativeLayout
                android:id="@id/edu_card"
                style="@style/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.bustiblelemons.views.SkillView
                    android:id="@id/edu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:tag="@string/edu"
                    app:showModifiers="true"
                    app:statTitle="@string/education"
                    app:titleSize="@dimen/font_16"
                    app:valueBelow="true"
                    app:valueSize="@dimen/font_18"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@id/int_card"
                style="@style/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edu_card">

                <com.bustiblelemons.views.SkillView
                    android:id="@id/intelligence"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:tag="@string/_int"
                    app:showModifiers="true"
                    app:statTitle="@string/intelligence"
                    app:statValue="@integer/placeholder_perc_val"
                    app:titleSize="@dimen/font_16"
                    app:valueBelow="true"
                    app:valueSize="@dimen/font_18"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@id/power_card"
                style="@style/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/int_card"
                tools:visibility="gone">

                <com.bustiblelemons.views.SkillView
                    android:id="@id/pow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:tag="@string/pow"
                    app:showModifiers="true"
                    app:statTitle="@string/power"
                    app:statValue="@integer/placeholder_perc_val"
                    app:titleSize="@dimen/font_16"
                    app:valueBelow="true"
                    app:valueSize="@dimen/font_18"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@id/dex_card"
                style="@style/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/power_card"
                tools:visibility="gone">

                <com.bustiblelemons.views.SkillView
                    android:id="@id/dex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:tag="@string/dex"
                    app:showModifiers="true"
                    app:statTitle="@string/dexterity"
                    app:statValue="@integer/placeholder_perc_val"
                    app:titleSize="@dimen/font_16"
                    app:valueBelow="true"
                    app:valueSize="@dimen/font_18"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/app_card"
                style="@style/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dex_card"
                tools:visibility="gone">

                <com.bustiblelemons.views.SkillView
                    android:id="@id/app"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:tag="@string/app"
                    app:showModifiers="true"
                    app:statTitle="@string/appearance"
                    app:statValue="@integer/placeholder_perc_val"
                    app:titleSize="@dimen/font_16"
                    app:valueBelow="true"
                    app:valueSize="@dimen/font_18"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/body_card"
                style="@style/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/app_card"
                tools:visibility="gone">


                <com.bustiblelemons.views.SkillView
                    android:id="@id/str"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:tag="@string/str"
                    app:showModifiers="true"
                    app:statTitle="@string/strength"
                    app:statValue="@integer/placeholder_perc_val"
                    app:titleSize="@dimen/font_16"
                    app:valueBelow="true"
                    app:valueSize="@dimen/font_18"/>


                <com.bustiblelemons.views.SkillView
                    android:id="@id/con"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/str"
                    android:tag="@string/con"
                    app:showModifiers="true"
                    app:statTitle="@string/constitution"
                    app:statValue="@integer/placeholder_perc_val"
                    app:titleSize="@dimen/font_16"
                    app:valueBelow="true"
                    app:valueSize="@dimen/font_18"/>

                <com.bustiblelemons.views.SkillView
                    android:id="@id/siz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/con"
                    android:tag="@string/siz"
                    app:showModifiers="true"
                    app:statTitle="@string/size"
                    app:statValue="@integer/placeholder_perc_val"
                    app:titleSize="@dimen/font_16"
                    app:valueBelow="true"
                    app:valueSize="@dimen/font_18"/>

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <at.markushi.ui.CircleButton
        android:id="@id/reroll"
        android:layout_width="@dimen/fab"
        android:layout_height="@dimen/fab"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@android:id/custom"
        android:layout_marginLeft="@dimen/padding_16"
        android:layout_marginRight="@dimen/padding_16"
        android:layout_marginTop="@dimen/fab_offset"
        android:src="@drawable/ic_dice"
        app:cb_color="@color/portraits_fab"/>

</RelativeLayout>