<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Animation"/>

    <style name="Animation.SlideInAnimations">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_out_right</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="card">
        <item name="android:background">@drawable/card_selector</item>
        <item name="android:layout_margin">@dimen/padding_8</item>
    </style>

    <style name="card.dark">
        <item name="android:background">@drawable/dark_card_selector</item>
        <item name="android:layout_margin">@dimen/padding_8</item>
    </style>

    <style name="card_peeking">
        <item name="android:background">@drawable/card_selector</item>
    </style>

    <style name="card.peeking.bottom" parent="card_peeking">
        <item name="android:layout_marginTop">@dimen/padding_8</item>
    </style>

    <style name="card.peeking.top" parent="card_peeking">
        <item name="android:paddingBottom">@dimen/padding_8</item>
    </style>

    <style name="inset_divider">
        <item name="android:layout_height">@dimen/inset_divider</item>
        <item name="android:background">@drawable/inset_divider</item>
    </style>

    <style name="full_bleed_divider">
        <item name="android:padding">@dimen/padding_4</item>
        <item name="android:layout_height">@dimen/full_bleed_divider</item>
        <item name="android:background">@drawable/full_bleed_divider</item>
    </style>

    <style name="indicator">
        <item name="android:paddingLeft">@dimen/padding_16</item>
        <item name="android:paddingRight">@dimen/padding_16</item>
        <item name="android:paddingBottom">@dimen/padding_8</item>
        <item name="android:paddingTop">@dimen/padding_2</item>
        <item name="fillColor">@color/indicator_fill</item>
        <item name="strokeColor">@color/indicator_stroke</item>
    </style>

    <style name="toolbar_theme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@null</item>
        <item name="colorPrimary">@color/main_button_color</item>
        <item name="colorAccent">@color/white_87</item>
        <item name="colorPrimaryDark">@color/black_87</item>
        <item name="android:actionOverflowButtonStyle">
            @style/Widget.AppCompat.ActionButton.Overflow
        </item>
        <item name="actionBarStyle">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">false</item>
    </style>

    <style name="toolbar_title">
        <item name="android:textColor">@color/white_87</item>
        <item name="android:textSize">@dimen/material_headline</item>
        <item name="android:layout_marginBottom">@dimen/padding_4</item>
        <item name="android:layout_marginLeft">@dimen/actionbar_height</item>
        <item name="android:layout_marginTop">@dimen/actionbar_height</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="toolbar_subtitle" parent="toolbar_title">
        <item name="android:textColor">@color/white_54</item>
        <item name="android:textSize">@dimen/material_subhead</item>
        <item name="android:layout_marginBottom">@dimen/padding_4</item>
        <item name="android:layout_marginLeft">@dimen/actionbar_height</item>
        <item name="android:layout_marginTop">@dimen/actionbar_height</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="statistic_creator_title" parent="toolbar_title">

    </style>

    <color name="primary_color">@color/white_87</color>
</resources>
