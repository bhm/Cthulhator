<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@android:id/custom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@android:id/title"
        android:layout_alignTop="@android:id/title"
        android:layout_toLeftOf="@id/inc"
        android:gravity="center"
        android:onClick="onClick"
        android:padding="@dimen/padding_16"
        tools:text="@string/placeholder_perc_val"/>

    <TextView
        android:id="@android:id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_toLeftOf="@android:id/custom"
        android:layout_toRightOf="@id/dec"
        android:gravity="center|left"
        android:onClick="onClick"
        android:padding="@dimen/padding_16"
        android:textSize="@dimen/font_16"
        android:textStyle="bold"
        tools:text="@string/placeholder_title"/>

    <ImageView
        android:id="@id/dec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:src="@drawable/ic_inc"
        tools:visibility="visible"/>

    <ImageView
        android:id="@id/inc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:onClick="onClick"
        android:src="@drawable/ic_dec"
        tools:visibility="visible"/>

</RelativeLayout>